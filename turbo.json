{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalPassThroughEnv": [
    "REVOLUT_MERCHANT_API_KEY",
    "DATABASE_URL",
    "DATABASE_URL_UNPOOLED",
    "CLERK_SECRET_KEY",
    "CLERK_WEBHOOK_SECRET"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build", "test"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": [
        "REVOLUT_MERCHANT_API_KEY",
        "DATABASE_URL",
        "DATABASE_URL_UNPOOLED",
        "CLERK_SECRET_KEY",
        "CLERK_WEBHOOK_SECRET"
      ]
    },
    "test": {
      "dependsOn": ["^test"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
